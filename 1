# https://www.geeksforgeeks.org/cartooning-an-image-using-opencv-python/

import cv2
import numpy as np
  
# reading image 
imgL = cv2.imread("/home/hus/Pictures/Song_image.jpg")
img = cv2.resize(imgL, None, fx = 0.2, fy = 0.2)

# Edges
gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)
gray = cv2.medianBlur(gray, 5)
edges = cv2.adaptiveThreshold(gray, 255, cv2.ADAPTIVE_THRESH_MEAN_C, 
                                         cv2.THRESH_BINARY, 1, 1)
   
# Cartoonization
color = cv2.bilateralFilter(img, 15, 250, 250)
cartoon = cv2.bitwise_and(color, color, mask=edges)
   
   
cv2.imshow("Image", img)
cv2.imshow("Edges", edges)
cv2.imshow("Gray", gray)
cv2.imshow("Cartoon", cartoon)
cv2.imwrite("/home/hus/Pictures/Song_Cartoon.jpg", edges)
cv2.waitKey(0)
cv2.destroyAllWindows()
